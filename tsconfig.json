{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@app/*": ["./slices/app/*"],
			"@shared/*": ["./slices/shared/*"],
			"@entities/*": ["./slices/entities/*"],
			"@pages/*": ["./slices/pages/*"],
			"@widgets/*": ["./slices/widgets/*"],
			"@features/*": ["./slices/features/*"],
			"@modules/*": ["./slices/modules/*"],
			"@assets/*": ["./assets/*"],
			"@expo-modules/*": ["./modules/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"petrovich.d.ts"
	]
}
