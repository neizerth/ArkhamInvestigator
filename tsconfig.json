{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"paths": {
			"@app/*": ["./slices/app/*"],
			"@shared/*": ["./slices/shared/*"],
			"@entities/*": ["./slices/entities/*"],
			"@pages/*": ["./slices/pages/*"],
			"@widgets/*": ["./slices/widgets/*"],
			"@features/*": ["./slices/features/*"],
			"@assets/*": ["./assets/*"]
