{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["./assets/*"],
			"@modules/*": ["./slices/modules/*"],
			"@expo-modules/*": ["./modules/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"declarations.d.ts",
		"petrovich.d.ts",
		"modules/**/*.ts",
		"modules/**/*.tsx"
	]
}
