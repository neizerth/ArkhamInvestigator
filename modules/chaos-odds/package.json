{
	"name": "chaos-odds",
	"version": "1.0.0",
	"description": "Native module for calculating chaos bag odds using Rust and React Native JSI",
	"main": "index.ts",
	"types": "index.ts",
	"scripts": {
		"build": "./build.sh",
		"build:ios": "cd cli && ./_build.ios.sh",
		"build:android": "cd cli && ./_build.android.sh",
		"clean": "cd rust && cargo clean",
		"test": "cd rust && cargo test",
		"test:release": "cd rust && cargo test --release",
		"test:js": "jest",
		"test:js:watch": "jest --watch",
		"test:js:coverage": "jest --coverage",
		"test:ios": "jest --testEnvironment=node --testNamePattern='ChaosOddsJSI' --verbose",
		"test:android": "jest --testEnvironment=node --testNamePattern='ChaosOddsJSI' --verbose",
		"test:all": "npm run test && npm run test:js"
	},
	"keywords": [
		"react-native",
		"expo",
		"rust",
		"jsi",
		"native-module",
		"arkham-horror",
		"chaos-bag"
	],
	"author": "",
	"license": "MIT",
	"peerDependencies": {
		"expo": "*",
		"react": "*",
		"react-native": "*"
	},
	"devDependencies": {
		"@types/react": "*",
		"@types/react-native": "*",
		"@types/jest": "^29.5.0",
		"jest": "^29.5.0",
		"react-native": "*",
		"ts-jest": "^29.1.0"
	}
}
