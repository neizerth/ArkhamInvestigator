{
	"name": "chaos-odds",
	"version": "1.0.0",
	"description": "Native module for calculating chaos bag odds using Rust and React Native JSI",
	"main": "index.ts",
	"types": "index.ts",
	"scripts": {
		"build": "./build.sh",
		"build:dev": "./build.sh --dev",
		"build:ios": "cd cli && ./_build.ios.sh",
		"build:ios:dev": "cd cli/build && ./ios.dev.sh",
		"build:android": "cd cli/build && bash android.sh",
		"build:android:dev": "cd cli/build && bash android.dev.sh",
		"clean": "cd rust && cargo clean",
		"clean:cache": "rm -rf android/.cxx android/build/intermediates/cxx",
		"test": "cd rust && cargo test --release",
		"test:dev": "cd rust && cargo test",
		"test:js": "jest",
		"test:js:watch": "jest --watch",
		"test:js:coverage": "jest --coverage",
		"test:ios": "jest --testEnvironment=node --testNamePattern='ChaosOddsJSI' --verbose",
		"test:android": "jest --testEnvironment=node --testNamePattern='ChaosOddsJSI' --verbose",
		"test:all": "npm run test && npm run test:js"
	},
	"keywords": [
		"react-native",
		"expo",
		"rust",
		"jsi",
		"native-module",
		"arkham-horror",
		"chaos-bag"
	],
	"author": "",
	"license": "MIT",
	"peerDependencies": {
		"expo": ">=50.0.0",
		"react": ">=18.0.0",
		"react-native": ">=0.79.0"
	},
	"devDependencies": {
		"@types/react": "~19.0.0",
		"@types/react-native": "*",
		"@types/jest": "^29.5.12",
		"jest": "^29.5.0",
		"react-native": "0.79.5",
		"ts-jest": "^29.1.0"
	}
}
